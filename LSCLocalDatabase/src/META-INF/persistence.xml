<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="lsc-local-database-jpa">
		<class>lsc.localdatabase.dao.model.User</class>
		<class>lsc.localdatabase.dao.model.Record</class>
		<class>lsc.localdatabase.dao.model.Data</class>
		<class>lsc.localdatabase.dao.model.Goal</class>
		<class>lsc.localdatabase.dao.model.Deadline</class>
		<class>lsc.localdatabase.dao.model.ToDo</class>
		<class>lsc.localdatabase.dao.model.Notification</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:database.sqlite" />
			<!-- ALL to see all the JPA related debugging information or INFO to see less -->
			<property name="eclipselink.logging.level" value="INFO" />
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
			
			<!-- it means that automatic changes will be directly applied to the database 
				this is not reccommended, but we will use it as example only -->
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		
		</properties>
	</persistence-unit>

</persistence>